name: Build and Push Docker Image

on:
  push:
    branches-ignore:
      - '*'  # Ignore toutes les branches (déclenche uniquement sur les commits)

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Log in to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Docker image
        run: docker build -t weather-wrapper-image .
        working-directory: 20201215  # Spécifiez le répertoire contenant votre Dockerfile

      - name: Tag Docker image
        run: docker tag weather-wrapper-image alexisu7/weather-wrapper-image

      - name: Push Docker image to Docker Hub
        run: docker push alexisu7/weather-wrapper-image
